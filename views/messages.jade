extends layout

block content
  div(class="transcript-container")
    img.className#IdName(src="https://tiledesk.com/tiledesk-logo-x1.png" alt="tiledesk logo") 
      
    div(class="transcript-wrapper")
      h1(class="transcript-title") Transcripci√≥n del Chat


      each message in messages
        p(class="transcript-p") 
          span(class="transcript-chat-date") [#{message.createdAt.toLocaleString('es-CR', { timeZone: 'America/Costa_Rica' })}] 
          span(class="transcript-chat-sender") #{message.senderFullname}: 
          span(class="transcript-chat-msg") #{message.text}
      
    p(class="transcript-powered-by")  Powered by   
      a(href="https://tiledesk.com/", target="_blank") tiledesk


